<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androidapp.CO2Mad">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_basket"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_basket"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androidapp">
        <activity
            android:name=".views.GameView"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".views.AlternativesView"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".views.ScannerView"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name=".views.MainView"
            android:theme="@style/AppTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="androidapp.CO2Mad.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>