<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.mainView.OverviewView">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:layout_width="397dp"
                android:layout_height="200dp" android:id="@+id/materialCardView3"
                app:layout_constraintStart_toStartOf="@id/materialCardView"
                app:layout_constraintBottom_toTopOf="@+id/materialCardView2"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView"/>
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                style="@style/Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="1dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                <Spinner
                        android:layout_width="362dp"
                        android:layout_height="50dp" android:id="@+id/spinner"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:dropDownSelector="@drawable/ic_navigate_before_black_24dp" android:background="@null"
                        android:layout_marginLeft="40dp"/>
                <TextView
                        android:id="@+id/totalEmission"
                        style="@style/CardTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView2"
                android:layout_width="393dp"
                android:layout_height="131dp"
                android:layout_margin="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/button_nooo"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorButton"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="Nooo" />
            <Button
                android:id="@+id/button_yess"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorButton"
                android:layout_width="wrap_content"
                android:text="yess" />
        </com.google.android.material.card.MaterialCardView>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" android:id="@+id/line"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>