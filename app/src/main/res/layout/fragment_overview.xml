<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.mainView.OverviewView">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/overview_constraint"
            android:layout_height="match_parent">

        <View
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:id="@+id/overviewView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"/>
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                style="@style/Card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="8dp"
                app:cardElevation="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="300dp"

                        android:layout_height="wrap_content"
                >

                    <AutoCompleteTextView
                            android:id="@+id/co2Showcase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                        android:id="@+id/totalEmission"
                        style="@style/CardTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView2"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                android:backgroundTint="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/line">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/gameText"
                        style="@style/CardTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" android:id="@+id/line"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/overviewView"/>
        <Button
                android:id="@+id/button_play"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorButton"
                android:layout_width="wrap_content"
                android:text="@string/play_button"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="108dp"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView2" android:layout_marginTop="4dp"/>
        <Button
                android:id="@+id/button_showNumbers"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorButton"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:text="@string/show_button"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="161dp"
                app:layout_constraintTop_toBottomOf="@+id/button_play"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>